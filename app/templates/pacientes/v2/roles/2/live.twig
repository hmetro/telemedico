<!DOCTYPE html>
<html lang="es">
    <head>
        <!-- Required meta tags -->
        <base href="{{config.build.url}}"/>
        <meta charset="utf-8"/>
        <meta content="no-cache, no-store, must-revalidate" http-equiv="Cache-Control"/>
        <meta content="no-cache" http-equiv="Pragma"/>
        <meta content="0" http-equiv="Expires"/>
        <!-- Meta -->
        <meta content="{{config.build.name}}" name="description"/>
        <meta content="@martinxapps" name="author"/>
        <!-- Favicon -->
        <link href="assets/dashforge/assets/img/favicon.png" rel="shortcut icon" type="image/x-icon"/>
        <title>
            Live | {{config.build.name}}
        </title>
        <link href="https://source.zoom.us/1.7.8/css/bootstrap.css" rel="stylesheet" type="text/css"/>
    </head>
</html>
<body>
    <style>
        .sdk-select {
            height: 34px;
            border-radius: 4px;
        }
        
        .websdktest button {
            float: right;
            margin-left: 5px;
        }
        #nav-tool {
            margin-bottom: 0px;
        }

        #show-test-tool {
            position: absolute;
            top: 100px;
            left: 0;
            display: block;
            z-index: 99999;        
        }

        footer {
            display: none;
        }

        #wc-footer-left {
          display: block;
        }
    </style>
    <nav class="navbar navbar-inverse navbar-fixed-top " id="nav-tool">
        <div class="container">
            <div class="websdktest" id="navbar">
                <form class="navbar-form navbar-right" id="meeting_form">
                    <div class="form-group" style="display: none;">
                        <input class="form-control" id="display_name" maxlength="100" name="display_name" placeholder="Name" type="text" value="1.7.8#CDN">
                        </input>
                    </div>
                    <div class="form-group" style="display: none;">
                        <input class="form-control" id="meeting_number" maxlength="11" name="meeting_number" placeholder="Meeting Number" style="width:150px" type="text" value="{{id_call}}">
                        </input>
                    </div>
                    <div class="form-group" style="display: none;">
                        <input class="form-control" id="meeting_pwd" maxlength="32" name="meeting_pwd" placeholder="Meeting Password" style="width:150px" type="text" value="123456">
                        </input>
                    </div>
                    <div class="form-group" style="display: none;">
                        <select class="sdk-select" id="meeting_role">
                            <option value="0">
                                Attendee
                            </option>
                            <option value="1">
                                Host
                            </option>
                            <option value="5">
                                Assistant
                            </option>
                        </select>
                    </div>
                    <div class="form-group" style="display: none;">
                        <select class="sdk-select" id="meeting_lang">
                            <option value="en-US">
                                English
                            </option>
                            <option value="de-DE">
                                German Deutsch
                            </option>
                            <option value="es-ES">
                                Spanish Español
                            </option>
                            <option value="fr-FR">
                                French Français
                            </option>
                            <option value="jp-JP">
                                Japanese 日本語
                            </option>
                            <option value="pt-PT">
                                Portuguese Portuguese
                            </option>
                            <option value="ru-RU">
                                Russian Русский
                            </option>
                            <option value="zh-CN">
                                Chinese 简体中文
                            </option>
                            <option value="zh-TW">
                                Chinese 繁体中文
                            </option>
                            <option value="ko-KO">
                                Korean 한국어
                            </option>
                        </select>
                    </div>
                    <button class="btn btn-primary" id="join_meeting" style="display: none;" type="submit">
                        Iniciar Atención
                    </button>
                </form>
            </div>
            <!--/.navbar-collapse -->
        </div>
    </nav>
    <script type="text/javascript">
        var API_ID_CALL = '{{id_call}}';
        var API_USER_CALL = '{{id_user_call}}';
        var _API_KEY_ = '{{config.zoom.api_key}}';
        var _API_SECRET_ = '{{config.zoom.api_secret}}';
    </script>
    <script src="https://source.zoom.us/1.7.8/lib/vendor/react.min.js">
    </script>
    <script src="https://source.zoom.us/1.7.8/lib/vendor/react-dom.min.js">
    </script>
    <script src="https://source.zoom.us/1.7.8/lib/vendor/redux.min.js">
    </script>
    <script src="https://source.zoom.us/1.7.8/lib/vendor/redux-thunk.min.js">
    </script>
    <script src="https://source.zoom.us/1.7.8/lib/vendor/jquery.min.js">
    </script>
    <script src="https://source.zoom.us/1.7.8/lib/vendor/lodash.min.js">
    </script>
    <script src="https://source.zoom.us/zoom-meeting-1.7.8.min.js">
    </script>
    <script src="assets/dashforge/lib/zoom/js/tool.js?{{ date().timestamp }}">
    </script>
    <script src="assets/dashforge/lib/zoom/js/admin.index.js?{{ date().timestamp }}">
    </script>
    <script type="text/javascript">
        (function() {
            document.getElementById("join_meeting").click(); 
        })();
    </script>
</body>
